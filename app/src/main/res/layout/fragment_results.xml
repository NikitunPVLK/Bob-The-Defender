<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020629">

    <ImageView
        android:id="@+id/alien_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@id/fire_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/aliens_killed_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/aldrich"
        android:text="Aliens killed: "
        android:textColor="#DCB700"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@+id/alien_view"
        app:layout_constraintStart_toEndOf="@id/alien_view"
        app:layout_constraintTop_toTopOf="@id/alien_view" />

    <TextView
        android:id="@+id/aliens_killed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#DCB700"
        android:textSize="48sp"
        android:fontFamily="@font/aldrich"
        android:text="10"
        app:layout_constraintBottom_toBottomOf="@id/aliens_killed_label"
        app:layout_constraintStart_toEndOf="@id/aliens_killed_label"
        app:layout_constraintTop_toTopOf="@id/aliens_killed_label" />

    <ImageView
        android:id="@+id/fire_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toTopOf="@id/coins_view"
        app:layout_constraintEnd_toEndOf="@+id/alien_view"
        app:layout_constraintStart_toStartOf="@+id/alien_view"
        app:layout_constraintTop_toBottomOf="@id/alien_view" />

    <TextView
        android:id="@+id/bullets_shot_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aldrich"
        android:text="Bullets shot: "
        android:textColor="#DCB700"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@id/fire_view"
        app:layout_constraintStart_toStartOf="@+id/aliens_killed_label"
        app:layout_constraintTop_toTopOf="@id/fire_view" />

    <TextView
        android:id="@+id/bullets_shot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#DCB700"
        android:textSize="48sp"
        android:fontFamily="@font/aldrich"
        android:text="10"
        app:layout_constraintBottom_toBottomOf="@id/bullets_shot_label"
        app:layout_constraintStart_toEndOf="@id/bullets_shot_label"
        app:layout_constraintTop_toTopOf="@id/bullets_shot_label" />

    <ImageView
        android:id="@+id/coins_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/alien_view"
        app:layout_constraintTop_toBottomOf="@id/fire_view" />

    <TextView
        android:id="@+id/coins_earned_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/aldrich"
        android:text="Coins earned: "
        android:textColor="#DCB700"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@+id/coins_view"
        app:layout_constraintStart_toEndOf="@+id/coins_view"
        app:layout_constraintTop_toTopOf="@+id/coins_view" />

    <TextView
        android:id="@+id/coins_earned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#DCB700"
        android:textSize="48sp"
        android:fontFamily="@font/aldrich"
        android:text="10"
        app:layout_constraintBottom_toBottomOf="@id/coins_earned_label"
        app:layout_constraintStart_toEndOf="@id/coins_earned_label"
        app:layout_constraintTop_toTopOf="@id/coins_earned_label" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/arrow_forward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>